@{
  ViewData["Title"] = $"Delete {Model.Destination}";
}

@model TravelAgent.Models.Travel

<h4>Are you sure you want to delete @Model.Destination?</h4>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}

@Html.ActionLink("Back to details", "Details", new { id = @Model.TravelId})